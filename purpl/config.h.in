#define MAKE_VERSION(Major, Minor, Patch, Build) ((Major) << 24 | (Minor) << 16 | (Patch) << 8 | (Build))
#define MAKE_VERSION_STRING_(Major, Minor, Patch, Build) #Major "." #Minor "." #Patch "." #Build
#define MAKE_VERSION_STRING(Major, Minor, Patch, Build) MAKE_VERSION_STRING_(Major, Minor, Patch, Build)
#define MAKE_VERSION_STRING_RC_(Major, Minor, Patch, Build) #Major "," #Minor "," #Patch "," #Build
#define MAKE_VERSION_STRING_RC(Major, Minor, Patch, Build) MAKE_VERSION_STRING_RC_(Major, Minor, Patch, Build)

#define GAME_VERSION_MAJOR ${VERSION_MAJOR}
#define GAME_VERSION_MINOR ${VERSION_MINOR}
#define GAME_VERSION_PATCH ${VERSION_ALTER}
#define GAME_VERSION_BUILD ${VERSION_BUILD}
#define GAME_COMMIT "${GIT_COMMIT}"
#define GAME_BRANCH "${GIT_BRANCH}"

#define GAME_VERSION MAKE_VERSION(GAME_VERSION_MAJOR, GAME_VERSION_MINOR, GAME_VERSION_PATCH, GAME_VERSION_BUILD)
#define GAME_VERSION_STRING MAKE_VERSION_STRING(GAME_VERSION_MAJOR, GAME_VERSION_MINOR, GAME_VERSION_PATCH, GAME_VERSION_BUILD)
#define GAME_VERSION_STRING_RC MAKE_VERSION_STRING_RC(GAME_VERSION_MAJOR, GAME_VERSION_MINOR, GAME_VERSION_PATCH, GAME_VERSION_BUILD)
